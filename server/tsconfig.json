{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
